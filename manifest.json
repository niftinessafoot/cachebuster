{
  "background": {
    "persistent": false,
    "scripts": [
      "cachebuster.js"
    ]
  },
  "commands": {
    "hard-refresh": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Force hard refresh"
    }
  },
  "description": "Auto-appends a unique querystring to the URL and replaces the history state, forcing a reload from the server.",
  "icons": {
    "128": "i/128.png",
    "16": "i/128.png",
    "32": "i/128.png",
    "48": "i/128.png"
  },
  "manifest_version": 2,
  "name": "Cachebuster",
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": {
      "128": "i/128.png",
      "16": "i/128.png",
      "32": "i/128.png",
      "48": "i/128.png"
    }
  },
  "version": "1.0"
}