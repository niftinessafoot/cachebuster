{
  "author": "Matthew Smith",
  "background": {
    "persistent": false,
    "scripts": [
      "cachebuster.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "i/128.png",
      "16": "i/16.png",
      "32": "i/32.png",
      "48": "i/48.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "description": "Front-end devs: stop fiddling with the address bar every time you need fresh-baked server goodness.",
  "icons": {
    "128": "i/128.png",
    "16": "i/16.png",
    "32": "i/32.png",
    "48": "i/48.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "45",
  "name": "Cachebuster",
  "short_name": "Cachebuster",
  "permissions": [
    "activeTab"
  ],
  "version": "1.0.3"
}