{
  "manifest_version": 3,
  "name": "Cachebuster",
  "version": "2.0.0",
  "description": "Front-end devs: stop fiddling with the address bar every time you need fresh-baked server goodness.",
  "icons": {
    "16": "i/16.png",
    "32": "i/32.png",
    "48": "i/48.png",
    "128": "i/128.png"
  },
  "background": {
    "service_worker": "cachebuster.js"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "128": "i/128.png",
      "16": "i/16.png",
      "32": "i/32.png",
      "48": "i/48.png"
    },
    "default_title": "Reload page with query string"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": "Alt+R"
    }
  },
  "homepage_url": "https://www.niftinessafoot.com/"
}
